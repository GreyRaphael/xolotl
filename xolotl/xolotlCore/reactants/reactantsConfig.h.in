#ifndef XCORE_REACTANTS_CONFIG_H
#define XCORE_REACTANTS_CONFIG_H

// Should we use the original (rev 1245) string format for
// IReactant compositions when ordering two reactants, and 
// for outputting reactant composition when dumping textual
// network representation?
#cmakedefine USE_ORIG_REACTANT_COMP_STRING

// Should we sort super cluster reaction coefficient terms before summing them?
// Sorting yields less numerical error in the sum, but is more expensive
// in time and (while the coefficients are being computed) in memory footprint.
#cmakedefine USE_SORTED_COEFF_SUMS

#endif // XCORE_REACTANTS_CONFIG_H
